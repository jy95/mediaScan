{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "class-name": false,
    "no-var-requires": false,
    "triple-equals": false,
    "no-bitwise": false,
    "interface-name": [
      "never-prefix"
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-constructor",
          "private-instance-method",
          "public-instance-method"
        ]
      }
    ]
  },
  "rulesDirectory": []
}